@model IEnumerable<EticaretCanta.Models.Pictures>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                <img src="/ImageUpload/@item.Name" height="100" width="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.Product_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Picture_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Picture_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Picture_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
