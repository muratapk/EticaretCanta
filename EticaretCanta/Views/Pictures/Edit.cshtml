@model EticaretCanta.Models.Pictures

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Pictures</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Picture_Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="ImageUpload" name="ImageUpload" type="file" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <img src="/ImageUpload/@Model.Name" height="100" widht="100"/>
            </div>
            <div class="form-group">
                <label asp-for="Product_Id" class="control-label"></label>
                <select asp-for="Product_Id" class="form-control" asp-items="ViewBag.Product_Id"></select>
                <span asp-validation-for="Product_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
